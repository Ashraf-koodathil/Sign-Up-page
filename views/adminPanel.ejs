<head>
  <link rel="stylesheet" href="adminPanel.css">
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div id="admin-panel">
    <aside id="menu">
      <nav>
        <ul>
          <li>
            <a class="link-offset-2 link-underline link-underline-opacity-0" href="#"><i class="fas fa-fw fa-home"></i> Dashboard</a>
          </li>
          <li>
            <a class="link-offset-2 link-underline link-underline-opacity-0" href="#"><i class="fas fa-fw fa-shopping-cart"></i> Shop</a>
          </li>
          <li>
            <a class="link-offset-2 link-underline link-underline-opacity-0" href="#"><i class="fas fa-fw fa-user"></i> Profile</a>
          </li>
          <li>
            <a class="link-offset-2 link-underline link-underline-opacity-0" href="#"><i class="fas fa-fw fa-users"></i> Users</a>
          </li>
        </ul>
      </nav>
    </aside>
    <main id="content">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active" aria-current="page">Admin</li>
          <li class="breadcrumb-item" aria-current="page">Dashboard</li>
        </ol>
      </nav>
  
      <h1 class="page-title">Dashboard</h1>
      <h3 class="border text-center rounded p-1">Users Information</h3>
      <div class="container text-center m-3 ">
        <%for(j=0;j < userData.length; j++) { %>
            <div class="list">
                <p><%= userData[j].text%></p>
                <p><%= userData[j].email %></p>
                <p><%= userData[j].pswd %></p>
                <div>
                    <button class="deleteBtn edit"><a href="">Edit</a></button>
                    <button class="deleteBtn"><a href='/admin-panel/<%= userData[j].id %>/delete'>Delete</a></button>
                </div>

            </div>
      <%}%>
      <% if(userAdd) { %>
          <form action='/admin/create/user' method="POST">
            <input type="text" name="text" placeholder="User name" required>
            <input type="email" name="email" placeholder="Email" required>
            <input type="password" name="pswd" placeholder="Password" required>
            <button type="submit">Add User</button>
          </form>
      <%}%>
       <button class="addBtn"><a href='/admin/adduser'>Create User</a></button>
    </main>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>